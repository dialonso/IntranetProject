{%extends "admin/layout.html.twig" %}
{%block title%}
	{{title}}
{%endblock%}
{%block jumbotron%}{%endblock%}
 {%block script %}
<script type="text/javascript" src="/pfe/sources/js/addStudent.js"></script>
    {%endblock%}
 {% block connected%}
 <img src="/pfe/sources/img/profil/{{user.compte.image}}" width="18">
{{user.perso.prenom}} {{user.perso.nom}}
 {%endblock%}

 {%block main %}

 <div class="panel panel-success">

 <div class="panel-heading">
    <h3 class="panel-title">La liste des étudiants</h3>
  </div>
  <div class="panel-body">
  	<table class="table table-condensed table-striped">
  		
  		<thead>
  			<tr>
  				<th>Nom prénoms</th>
  				<th>Action</th>
  			</tr>
  			
  		</thead>
  		<tbody>
  			{%for etud in etudiants %}
  				<tr>
  					<td>{{etud.nom}} {{etud.prenom}}</td>
  					<td>
  						<a href="#" class="btn">
  							<span class="glyphicon glyphicon-pencil"></span>
  						</a>
  						<a href="#" class="btn">
  							<span class="glyphicon glyphicon-eye-open"></span>
  						</a>
  						<a href="#" class="btn">
  							<span class="glyphicon glyphicon-trash"></span>
  						</a>
  					</td>
  				</tr>

  			{%endfor%}
  		</tbody>
  	</table>
  </div>
  
  
</div>

 {%endblock%}